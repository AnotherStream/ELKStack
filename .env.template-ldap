# ELK Stack バージョン設定
ELASTICSEARCH_VERSION=8.11.0
LOGSTASH_VERSION=8.11.0
KIBANA_VERSION=8.11.0

# ポート設定
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_TRANSPORT_PORT=9300
LOGSTASH_BEATS_PORT=5044
LOGSTASH_TCP_PORT=5000
LOGSTASH_UDP_PORT=5000
LOGSTASH_HTTP_PORT=9600
KIBANA_PORT=5601

# メモリ設定（ヒープサイズ）
ELASTICSEARCH_HEAP_SIZE=512m
LOGSTASH_HEAP_SIZE=256m

# クラスター設定
CLUSTER_NAME=elk-cluster
NODE_NAME=elasticsearch

# ネットワーク設定
COMPOSE_PROJECT_NAME=elk-stack

# ログ設定
LOG_LEVEL=info

# セキュリティ設定（LDAP認証用）
ELASTIC_PASSWORD=your_elastic_password_here

# LDAP設定
LDAP_URL=ldap://your-ldap-server:389
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=your_ldap_bind_password_here

# LDAP ユーザー検索設定
LDAP_USER_SEARCH_BASE_DN=ou=users,dc=example,dc=com
LDAP_USER_SEARCH_FILTER=(uid={0})

# LDAP グループ検索設定
LDAP_GROUP_SEARCH_BASE_DN=ou=groups,dc=example,dc=com
LDAP_GROUP_SEARCH_FILTER=(member={0})

# SSL/TLS 証明書設定（LDAP認証時に必要）
# 証明書ファイルは certs/ ディレクトリに配置してください
CA_CERT_PATH=./certs/ca.crt
ELASTICSEARCH_CERT_PATH=./certs/elasticsearch.crt
ELASTICSEARCH_KEY_PATH=./certs/elasticsearch.key
KIBANA_CERT_PATH=./certs/kibana.crt
KIBANA_KEY_PATH=./certs/kibana.key
LOGSTASH_CERT_PATH=./certs/logstash.crt
LOGSTASH_KEY_PATH=./certs/logstash.key